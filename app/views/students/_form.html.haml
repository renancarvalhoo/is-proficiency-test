= form_for(@student) do |f|
  - if @student.errors.any?
    #error_explanation
      %h2
        = pluralize(@student.errors.count, "error")
        prohibited this student from being saved:
      %ul
        - @student.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label Student.human_attribute_name(:name)
    %br/
    = f.text_area :name
  .field
    = f.label Student.human_attribute_name(:register_number)
    %br/
    = f.text_area :register_number
  .field
    = f.label Student.human_attribute_name(:status)
    %br/
    = f.number_field :status
  .actions
    = f.submit
