= form_for(@class_room) do |f|
  - if @class_room.errors.any?
    #error_explanation
      %h2
        = pluralize(@class_room.errors.count, "error")
        prohibited this class_room from being saved:
      %ul
        - @class_room.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label ClassRoom.human_attribute_name(:student_id)
    %br/
    = collection_select(:class_room, :student_id, Student.all, :id , :name)
  .field
    = f.label ClassRoom.human_attribute_name(:course_id)
    %br/
    = collection_select(:class_room, :course_id, Course.all, :id , :name, {:class => "form-group"})
  .field
    = f.label ClassRoom.human_attribute_name(:entry_at)
    %br/
    = f.datetime_select :entry_at
  .actions
    = f.submit
