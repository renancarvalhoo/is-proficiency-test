%p#notice= notice
%h1= t '.title'
%table.table
  %thead
    %tr
      %th= Course.human_attribute_name(:name)
      %th= Course.human_attribute_name(:description)
      %th= Course.human_attribute_name(:status)
      %th{:colspan => "3"}
  %tbody
    - @courses.each do |course|
      %tr
        %td= course.name
        %td= course.description
        %td= course.status
        %td= link_to t(:show), course, :class => "btn btn-info"
        %td= link_to t(:edit), edit_course_path(course), :class => "btn btn-warning"
        %td= link_to t(:destroy), course, method: :delete, data: { confirm: I18n.t(:confirm_delete) }, :class => "btn btn-danger"
%br/
= link_to t('.new_item'), new_course_path, :class => "btn btn-primary"
